<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/drawer_border">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="bottom"
        android:padding="16dp"
        android:background="@drawable/header_bgk"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:layout_width="124dp"
            android:layout_height="103dp"
            android:src="@drawable/spulogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="information@spu.ac.za"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>

    <!-- View Requests -->
    <LinearLayout
        android:id="@+id/tutordashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/my_primary"
            android:text="Profile"
            android:textSize="20sp"
            android:drawableLeft="@drawable/dashboard"
            android:drawablePadding="8dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/my_primary"/>

    <!-- Submit Tutorial Evaluation -->
    <LinearLayout
        android:id="@+id/viewrequestbooked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/my_primary"
            android:text="View Students Booked"
            android:textSize="20sp"
            android:drawableLeft="@drawable/book_online"
            android:drawablePadding="8dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/my_primary"/>
    <LinearLayout
        android:id="@+id/submitevaluation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/my_primary"
            android:text="Submit Tutorial Evaluation"
            android:textSize="20sp"
            android:drawableLeft="@drawable/sumbit"
            android:drawablePadding="8dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/my_primary"/>

    <!-- Claim Service -->
    <LinearLayout
        android:id="@+id/claim_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@id/claim_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/my_primary"
            android:text="Claim Service"
            android:textSize="20sp"
            android:drawableLeft="@drawable/claimservice"
            android:drawablePadding="8dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/my_primary"/>
    <!-- Claim Service -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="25dp"
        android:id="@+id/uploadDetails"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/my_primary"
            android:text="Upload Banking Details"
            android:textSize="20sp"
            android:drawableLeft="@drawable/uploaddetails"
            android:drawablePadding="8dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/my_primary"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:id="@+id/tutorfeedback"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"/>

    <!-- Logout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:id="@+id/tutorlogout"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/LOGOUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/log_out"
        android:drawablePadding="8dp"
        android:text="Logout"
        android:textStyle="bold"
        android:textColor="@color/my_primary"
        android:textSize="20sp"
        android:layout_marginStart="12dp"/>

    </LinearLayout>
</LinearLayout>
