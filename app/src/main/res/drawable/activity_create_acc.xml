<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateAcc">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createaccounttitle"
        android:text="Create Account"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#B32C21"
        android:gravity="center"
        android:layout_margin="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_below="@id/createaccounttitle"
        android:background="#F4EDED"
        android:hint="Username"
        android:textColorHint="#7E7979"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/person"
        android:drawablePadding="20dp"/>


    <EditText
        android:id="@+id/studentnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#F4EDED"
        android:drawableLeft="@drawable/student_num"
        android:drawablePadding="20dp"
        android:hint="Student Number"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="#7E7979" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phonenumber"
        android:layout_below="@id/studentnumber"
        android:background="#F4EDED"
        android:hint="Phone Number "
        android:textColorHint="#7E7979"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/phonenumber"
        android:background="#F4EDED"
        android:hint="Email"
        android:textColorHint="#7E7979"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_below="@id/email"
        android:background="#F4EDED"
        android:hint="Password"
        android:textColorHint="#7E7979"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="20dp"
        android:inputType="textPassword"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repassword"
        android:layout_below="@id/password"
        android:background="#F4EDED"
        android:hint="Re-Password"
        android:textColorHint="#7E7979"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="20dp"
        android:inputType="textPassword"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/creataccountbtn"
        android:text="CREATE"
        android:textSize="20dp"
        android:layout_below="@id/repassword"
        android:layout_centerHorizontal="true"
        app:backgroundTint="#B32C21"
        android:layout_margin="10dp"
        app:cornerRadius="0.8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_centerHorizontal="true"
        android:id="@+id/have_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/creataccountbtn"
        android:text="Already have an Account"
        app:cornerRadius="0.8dp"/>

</RelativeLayout>